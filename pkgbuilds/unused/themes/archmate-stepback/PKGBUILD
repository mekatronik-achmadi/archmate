pkgname=archmate-stepback
_thname=OneStepBack
_thnamewm2=OneStepBack-wm2
pkgver=0.997
pkgrel=1
pkgdesc="Gtk theme inspired by NeXTSTEP"
arch=('any')
url="http://www.vide.memoire.free.fr/perso/OneStepBack"
license=('GPL3')
optdepends=('chicago95-icon-theme: Matching icons')
source=("http://www.vide.memoire.free.fr/perso/$_thname/$_thname-v$pkgver.zip"
"http://www.vide.memoire.free.fr/perso/$_thname/$_thnamewm2-v$pkgver.zip")
sha256sums=('SKIP' 'SKIP')

package() {
    cd "$srcdir/$_thname"

    find index.theme gtk-* img -type f -print0 | \
		xargs -0 -I{} -n1 install -D -m644 "{}" "$pkgdir"/usr/share/themes/"$_thname"/"{}"

    cd "$srcdir/$_thnamewm2"

    find index.theme gtk-* img -type f -print0 | \
		xargs -0 -I{} -n1 install -D -m644 "{}" "$pkgdir"/usr/share/themes/"$_thnamewm2"/"{}"
}

